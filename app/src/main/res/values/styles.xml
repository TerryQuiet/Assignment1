<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="details_socialNetwork_imageButton" parent="">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_activity</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_activity</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!--  TextInputLayout-->
    <style name="MyApp.TextInputLayoutStyleOutlineOnWhite" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/MaterialThemeOverlayOutline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="errorTextColor">@color/red_200</item>
        <item name="boxStrokeColor">@color/dark_blue_200</item>
        <item name="android:layout_marginTop">@dimen/small_8dp</item>
    </style>

    <style name="MaterialThemeOverlayOutline">
        <item name="editTextStyle">@style/TextInputEditTextStyleOutline</item>
    </style>

    <style name="TextInputEditTextStyleOutline" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/dark_blue_200</item>
    </style>


    <style name="orangeButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange_500</item>
        <item name="android:padding">@dimen/small_8dp</item>

    </style>

</resources>