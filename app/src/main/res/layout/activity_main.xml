<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:paddingBottom="53dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="@dimen/details_square_photo"
                android:layout_height="@dimen/details_square_photo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:srcCompat="@drawable/ic_profile" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextAppearance.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_24dp"
                android:layout_marginBottom="@dimen/small_8dp"
                android:text="Lucile Alvarado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_profile_pic" />

            <TextView
                android:id="@+id/tv_occupation"
                style="@style/TextAppearance.H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_8dp"
                android:text="Graphic designer"
                app:layout_constraintEnd_toEndOf="@id/tv_name"
                app:layout_constraintStart_toStartOf="@id/tv_name"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/TextAppearance.H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_16dp"
                android:text="5295 Gaylord Walks Apk."
                app:layout_constraintEnd_toEndOf="@id/tv_occupation"
                app:layout_constraintStart_toStartOf="@id/tv_occupation"
                app:layout_constraintTop_toBottomOf="@id/tv_occupation" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/im_facebook"
            style="@style/details_socialNetwork_imageButton"
            android:background="?android:selectableItemBackground"
            app:layout_constraintEnd_toStartOf="@+id/im_instagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/im_instagram"
            app:srcCompat="@drawable/ic_facebook" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/im_instagram"
            style="@style/details_socialNetwork_imageButton"
            android:layout_marginTop="62dp"
            android:background="?android:selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toStartOf="@+id/im_vkontakte"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/im_facebook"
            app:layout_constraintTop_toBottomOf="@+id/top_container"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:srcCompat="@drawable/ic_linkedin" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/im_vkontakte"
            style="@style/details_socialNetwork_imageButton"
            android:background="?android:selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/im_instagram"
            app:layout_constraintTop_toTopOf="@+id/im_instagram"
            app:srcCompat="@drawable/ic_vkontakte" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_16dp"
            android:backgroundTint="?attr/colorSecondary"
            android:text="@string/edit_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_instagram" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

