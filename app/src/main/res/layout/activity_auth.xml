<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/container_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/small_8dp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/normal_16dp"
            app:layout_constraintBottom_toTopOf="@+id/container_editables"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread">

            <TextView
                android:id="@+id/tv_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auth_main"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline1"
                android:textColor="@color/onBackGroundColor" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="@string/auth_instruction"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline4"
                android:textColor="@color/onBackGroundColor" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_editables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/small_8dp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/normal_16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_message">

            <TextView
                android:id="@+id/tv_label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/xsmall_4dp"
                android:text="@string/email"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                android:textColor="@color/gray" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_email_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@android:color/transparent"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_label_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_16dp"
                android:paddingHorizontal="@dimen/xsmall_4dp"
                android:text="@string/password"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                android:textColor="@color/gray" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_passwordParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                android:hint="@string/password"
                app:boxBackgroundColor="@android:color/transparent"
                app:hintEnabled="true">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/normal_16dp"
            android:layout_marginVertical="@dimen/small_8dp"
            android:padding="@dimen/normal_16dp"
            android:text="@string/register"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_terms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/onBackGroundColor"
            app:strokeColor="?attr/colorSecondary"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/tv_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_16dp"
            android:layout_marginHorizontal="@dimen/normal_16dp"
            android:text="@string/auth_terms"
            android:textAlignment="center"
            android:textColor="@color/onBackGroundColor"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/checkBox_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/normal_16dp"
            android:text="@string/remember_me"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintBottom_toTopOf="@+id/btn_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_editables"
            app:layout_constraintVertical_bias="0" />

        <CheckBox
            android:id="@+id/checkBox_autologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/normal_16dp"
            android:text="@string/auto_login"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintBottom_toTopOf="@+id/btn_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_editables"
            app:layout_constraintVertical_bias="0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

