<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/tv_main"
            style="@style/TextAppearance.H1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="@string/auth_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TextAppearance.H4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/auth_instruction"
            app:layout_constraintEnd_toEndOf="@+id/tv_main"
            app:layout_constraintStart_toStartOf="@+id/tv_main"
            app:layout_constraintTop_toBottomOf="@+id/tv_main" />

        <TextView
            android:id="@+id/tv_label_email"
            style="@style/TextAppearance.H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="4dp"
            android:text="@string/email"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/et_email"
            style="@style/TextAppearance.H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColor="?attr/colorOnPrimary"
            android:textColorHint="?attr/colorOnPrimary"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_email"
            app:layout_constraintStart_toStartOf="@+id/tv_label_email"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_email" />

        <TextView
            android:id="@+id/tv_label_password"
            style="@style/TextAppearance.H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="4dp"
            android:text="@string/password"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email" />

        <EditText
            android:id="@+id/et_password"
            style="@style/TextAppearance.H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="?attr/colorOnPrimary"
            android:textColorHint="?attr/colorOnPrimary"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_password"
            app:layout_constraintStart_toStartOf="@+id/tv_label_password"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_password" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:padding="16dp"
            android:text="@string/register"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="24sp"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_terms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_password"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintVertical_chainStyle="packed"
            app:strokeColor="?attr/colorSecondary"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/tv_terms"
            style="@style/TextAppearance.H4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="68dp"
            android:text="@string/auth_terms"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_register"
            app:layout_constraintVertical_bias="1" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

