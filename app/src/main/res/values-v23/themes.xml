<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.MyApp" parent="Base.Theme.MyApp" />

    <style name="Base.Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/dark_blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_blue_200</item>
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorSurface">@color/white_700</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/dark_blue_500</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>

        <item name="errorTextColor">@color/red_600</item>
        <item name="colorOnError">?attr/errorTextColor</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/dark_blue_200</item>

        <!--statusBar-->
        <item name="android:statusBarColor">?android:textColorHint</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyTheme.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyTheme.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyTheme.LargeComponent
        </item>
        <!--Component styles-->

        <!--app bar basically-->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Theme.DetailsScreen" parent="Theme.BaseDetail"></style>

    <style name="Theme.BaseDetail" parent="Base.Theme.MyApp">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/orange_200</item>
        <item name="colorSurface">@color/dark_blue_500</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/white_700</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>
    </style>

</resources>